{% trans_default_domain 'FOSUserBundle' %}

 <div class="row vertical-offset-100">
    <div class="col-md-12 col-md-offset-0">
        <div class="panel panel-success">
            <div class="panel panel-heading ">
                <h3 class="panel-title aligneText logo" >
                    Modifiez vos données personnelles 
                </h3>
            </div>
            <div class="panel-body ">
                 <div class="row"> 
                {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit'} }) }}
                    <div class="fos_user_user_show col-md-6">
                        <div class="panel panel-info">
                            <div class="panel panel-heading ">
                                <h3 class="panel-title">
                                    Identité
                                </h3>
                            </div>
                            <div class="panel-body ">
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.civilite, "Civilité", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.civilite) }}
                                    <div class="col-md-4 col-sm-6 col-xs-6">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.civilite, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div> 
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.prenom, "Prénom d'utilisateur", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.prenom) }}
                                    <div class="col-sm-12">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>       
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.username) }}
                                    <div class="col-sm-12">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>    
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.pseudo, "Pseudonyme", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.pseudo) }}
                                    <div class="col-sm-12">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.image, "Photo", {'label_attr': {'class': 'col-sm-12 col-xs-12 col-lg-12 col-md-12  control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    <div class="form-group">
                                        <div class="col-sm-5 col-xs-6 col-lg-5 col-md-5">
                                            {% if app.user.image %}        
                                                <img title="mon avatar" style="border: 2px #DFF0D8 solid ; border-color: #DFF0D8; padding: 1px 1px 1px 1px; border-radius: 5%;" src="{{ asset(image.webPath) }}" alt="{{ image.alt }}" />
                                            {% else%}
                                                <img title="mon avatar" style="border: 2px #DFF0D8 solid ; border-color: #DFF0D8; padding: 1px 1px 1px 1px; border-radius: 5%;" src="{{ asset('img/user.png') }}" alt="{{ "pas de photo" }}" />
                                            {% endif%}  
                                        </div>
                                    </div>   
                                    {{ form_errors(form.image) }}
                                    <div class="col-sm-12">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.image, {'attr': {'class': 'overf'}}) }}
                                    </div>
                                    {{ form_label(form.image, "Taille du fichier : 2m maximum", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    <div class="col-sm-12">
                                        <img class="signlogo"  src="{{ asset('img/LogoPropeMe.svg') }}" alt="Logo JevisLà">    
                                    </div>    
                                </div>
                            </div>    
                        </div> 
                    </div>    
                    <div class="fos_user_user_show col-md-6 ">                   
                        <div class="panel panel-info">
                            <div class="panel panel-heading ">
                                <h3 class="panel-title">Adresse</h3>
                            </div>
                            <div class="panel-body ">
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.numeroAd, "Numéro", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.numeroAd) }}
                                    <div class="col-sm-12">
                                      {# Génération de l'input. #}
                                      {{ form_widget(form.numeroAd, {'attr': { 'id': 'numeroAdLL', 'class': 'form-control' }}) }}
                                    </div>
                                </div> 
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.voieAd, "Voie", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.voieAd) }}
                                    <div class="col-md-4 col-sm-6 col-xs-6">
                                      {# Génération de l'input. #}
                                      {{ form_widget(form.voieAd, {'attr': { 'id': 'voieAdLL', 'class': 'form-control' }}) }}
                                    </div>
                                </div>  
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.nomVoieAd, "Nom de la voie", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.nomVoieAd) }}
                                    <div class="col-sm-12">
                                      {# Génération de l'input. #}
                                      {{ form_widget(form.nomVoieAd, {'attr': { 'id': 'nomVoieAdLL', 'class': 'form-control' }}) }}
                                    </div>
                                </div>      
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.villeAd, "Ville", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.villeAd) }}
                                    <div class="col-sm-12">
                                      {# Génération de l'input. #}
                                      {{ form_widget(form.villeAd, {'attr': { 'id': 'villeLL', 'class': 'form-control' }}) }}
                                    </div>
                                </div>  
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.codePostal, "Code postal", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.codePostal) }}
                                    <div class="col-sm-12">
                                      {# Génération de l'input. #}
                                      {{ form_widget(form.codePostal, {'attr': {'id': 'codePostalLL' , 'class': 'form-control', 'onblur': 'calculLatLng("2");'}}) }}
                                    </div>
                                </div>   
                                <div class="form-group">
                                   {# Génération du label. #}
                                   {{ form_label(form.latitude, "Latitude", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                   {# Affichage des erreurs pour ce champ précis. #}
                                   {{ form_errors(form.latitude) }}
                                   <div class="col-sm-12">
                                     {# Génération de l'input. #}
                                     {{ form_widget(form.latitude, {'attr': { 'id': 'latitudeLL', 'class': 'form-control' }}) }}
                                   </div>
                                </div> 
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.longitude, "longitude", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.longitude) }}
                                    <div class="col-sm-12">
                                      {# Génération de l'input. #}
                                      {{ form_widget(form.longitude, {'attr': {'id': 'longitudeLL', 'class': 'form-control' }}) }}
                                    </div>
                                    <div class="col-sm-12">
                                        <img class="signlogo"  src="{{ asset('img/LogoPropeMe.svg') }}" alt="Logo JevisLà">    
                                    </div>
                                </div> 
                                 
                            </div>
                        </div>
                    </div>                  
                 </div>  
                    </br></br>                   
                 <div class="row">                   
                    <div class="fos_user_user_show col-md-6">
                        <div class="panel panel-info">
                            <div class="panel panel-heading ">
                                <h3 class="panel-title">Contact</h3>
                            </div>
                            <div class="panel-body ">
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.email, "Adresse mail", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.email) }}
                                    <div class="col-md-8 col-sm-12 col-xs-12">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div> 
                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.portable, "Portable", {'label_attr': {'class': 'col-sm-12 control-label'}}) }}
                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.portable) }}
                                    <div class="col-sm-12">
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.portable, {'attr': {'class': 'form-control', 'autocomplete': 'on'}}) }}
                                    </div>
                                    <div class="col-sm-12">
                                        <img class="signlogo"  src="{{ asset('img/LogoPropeMe.svg') }}" alt="Logo JevisLà">    
                                    </div>
                                </div>  
                            </div>    
                        </div>    
                    </div>  
                    <div class="fos_user_user_show col-md-6 "> 
                         <div class="panel panel-info">
                            <div class="panel panel-heading ">
                                <h3 class="panel-title">Sécurité</h3>
                            </div>
                            <div class="panel-body ">
                                <div class="col-md-8 col-sm-12 col-xs-12">
                                    {{ form_widget(form) }}  
                                    <img class="signlogo"  src="{{ asset('img/LogoPropeMe.svg') }}" alt="Logo JevisLà"> 
                                </div>
                            </div> 
                        </div> 
                    </div>  
                        <br>        
                    <div>
                        <input class="btn btn-sm btn-info col-md-offset-3 " type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                    </div>
               {{ form_end(form) }}    
                </div>   
            </div>
        </div>
    </div>
    
</div>


  
                                                

