{# empty Twig template #}

<div class="container slider">
    <div class="col-lg-offset-1 col-lg-10 col-md-offset-1 col-md-10 col-sm-12 col-xs-12">
        <div class="panel panel-info well plateformeAdmin">
            <div class="panel-heading">
                <h3 class="panel-title categFormAdmin" >Formulaire Category</h3>
            </div>
            <br>
            <div class="panel-body">
                <div class="row">  
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    {# Les erreurs générales du formulaire. #}
                    {{ form_errors(form) }}

                    {# Génération du label + error + widget pour un champ. #}

                     {# Idem pour un autre champ. #}
                        {% if form.name is defined %}
                            <div class="form-group"> <br>
                                {{ form_label(form.name, "Nom de la catégorie", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                                {{ form_errors(form.name) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.name) }}  
                                </div>
                            </div>  
                        {% endif %}
                    <div class="form-group"> 
                        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
                            <div class="col-md-3 col-xs-3">
                                {{ form_label(form.enregistrer, "Enregistrement", {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-info'}}) }}
                            </div><br>
                        
                    </div>
                    <div class="col-sm-3 col-xs-3 pull-right">
                        <a href="{{ path('jevisla_administration_home') }}" class="btn btn-info pull-right">
                            <i class="glyphicon glyphicon-chevron-left"></i>
                            Retour à la liste
                        </a>
                    </div>        
                    {# Génération automatique des champs pas encore écrits.
                       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                       et tous les champs cachés (type « hidden »). #}
                    {{ form_rest(form) }}

                    {# Fermeture de la balise <form> du formulaire HTML #}
                    {{ form_end(form) }}
                </div>    
            </div>    
        </div>
    </div>
</div>        